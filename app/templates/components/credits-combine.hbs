<h3>Combine credits</h3>
{{credit-assignments
  creditAssignments=creditAssignments
}}
<fieldset>
  <p>
    {{#form-input error=errors.credit showError=showErrors}}
      Course
      <TSelect
        name="credit"
        @prompt="Select a course"
        @value={{relationships.credit.id}}
        @onchange={{action "updateRelationship" "credit" "credit"}}
        @optionsList={{creditOptions}}
      />
    {{/form-input}}
  </p>
</fieldset>
<fieldset>
  <p>
    {{#form-input error=errors.creditHours showError=showErrors}}
      <div class="flex justify-between">
        <span>
          Credit hours
        </span>
        <span>
          {{#if pojo.enableOverride}}<span class="inline no-underline fas fa-check text-orange-500 mr-2" />{{/if}}
          <TLink
            class="font-normal"
            data-test-toggle-override
            @action={{action "toggleOverride"}}
          >
            Override
          </TLink>
        </span>
      </div>
      {{#if pojo.enableOverride}}
        <input
          type="number"
          step="0.25"
          min="0"
          name="creditsOverride"
          data-test-credit-hours
          value={{pojo.creditsOverride}}
          onchange={{action "onChange"}}
        >
      {{else}}
        <span data-test-credit-hours class="field">
          {{pojo.creditHours}}
        </span>
      {{/if}}
    {{/form-input}}
  </p>
</fieldset>
<fieldset>
  <p>
    {{#form-input error=errors.contractTerm showError=showErrors}}
      Term
      <TermSelect
        name="contractTerm"
        @value={{relationships.contractTerm.id}}
        @prompt="Select a term"
        @terms={{terms}}
        @onchange={{action "updateRelationship" "contractTerm" "term"}}
      />
    {{/form-input}}
  </p>
</fieldset>
<fieldset>
  <p>
    {{#form-input error=errors.note showError=showErrors}}
      Notes
      <textarea
        value={{pojo.note}}
        name="note"
        onchange={{action "onChange"}}
      />
    {{/form-input}}
  </p>
</fieldset>
<footer>
  <button class="btn" type="submit">
    Combine
  </button>
  <TLink
    @action={{action "close"}}
  >
    Cancel
  </TLink>
</footer>
