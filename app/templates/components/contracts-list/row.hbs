<tr data-test-contracts-list-row>
  <td>
    {{#link-to "contract" contract.id}}
      {{contract.attributes.name}}
    {{/link-to}}
  </td>
  <td>
    {{number-or contract.relationships.enrollments.data.length}}
  </td>
  <td>
    {{category.attributes.name}}
  </td>
  <td>
    {{full-name facilitator "first-last"}}
  </td>
  <td>
    {{term.attributes.name}}
  </td>
  <td>
    {{titleize contract.attributes.status}}
  </td>
  <td>
    <ul class="actions-list">
      <li class="actions-list-item status">
        {{#link-to "status-by-contract" contract.id}}
          Status
        {{/link-to}}
      </li>
      <li class="actions-list-item enrollments">
        {{#link-to "contract-enrollments" contract.id}}
          Enrollments
        {{/link-to}}
      </li>
      <li class="actions-list-item assignments">
        {{#link-to "contract-assignments" contract.id}}
          Assignments
        {{/link-to}}
      </li>
      <li class="actions-list-item attendance">
        {{#link-to "contract-attendance" contract.id}}
          Attendance
        {{/link-to}}
      </li>
    </ul>
  </td>
</tr>